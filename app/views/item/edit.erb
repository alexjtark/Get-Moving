<h1>Edit this item</h1>

<% if current_user %>
<div class="edit-item">
  <form action="/item/<%= @item.id %>" method="POST">
    <input type="hidden" name="_method" value="PUT">

    Name:<input type="text" name="item[name]" value="<%= @item.name %>"><br>
    Quantity:<input type="number" name="item[quantity]" value="<%= @item.quantity %>"><br>
    Description: <input type="text" name="item[description]" value="<%= @item.description %>"><br>
    <input type="submit">
  </form>
</div>
<% end %>

